<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/directory_list_item_style">

    <ImageView
        android:id="@+id/directory_icon"
        style="@style/directory_icon_style"
        tools:ignore="ContentDescription">
    </ImageView>

    <TextView
        android:id="@+id/directory_name"
        android:layout_toEndOf="@+id/directory_icon"
        style="@style/directory_name_style">
    </TextView>

</RelativeLayout>